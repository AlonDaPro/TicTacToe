{
  "name": "bluemail-tic-tac-toe",
  "version": "1.0.0",
  "description": "Real-time multiplayer Tic-Tac-Toe with WebSocket federation across two servers",
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "server": "tsc && node dist/server/server.js",
    "server:a": "npm run server 3001",
    "server:b": "npm run server 3002",
    "client": "tsc && node dist/client/index.js",
    "start": "npm run build && npm run server:a & npm run server:b &",
    "lint": "eslint src/**/*.ts --ext .ts",
    "lint:fix": "eslint src/**/*.ts --ext .ts --fix"
  },
  "dependencies": {
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "reflect-metadata": "^0.2.2",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "tic-tac-toe",
    "websocket",
    "real-time",
    "multiplayer",
    "redis",
    "nodejs"
  ]
}
